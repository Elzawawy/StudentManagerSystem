<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xcodesystemsinterns.studentmanager">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Student Manager"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Exams.ExamListActivity"></activity>
        <activity android:name=".Classes.ClassListActivity" />
        <activity android:name=".Classes.ClassActivity" />
        <activity android:name=".Assignments.AssignmentsList" />
        <activity
            android:name=".Assignments.AssignmentActivity"
            android:theme="@style/Theme.AppCompat.Dialog" />
        <activity android:name=".Students.StudentActivity" />
        <activity
            android:name=".Students.StudentListActivity"
            android:theme="@style/Theme.AppCompat.Dialog" />
        <activity
            android:name=".Exams.ExamActivity"
            android:theme="@style/Theme.AppCompat.Dialog" />
    </application>

</manifest>