<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>

    <TextView
        android:id="@+id/StudentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/large_view_margin"
        android:layout_marginStart="@dimen/large_view_margin"
        android:layout_marginTop="@dimen/default_view_margin"
        android:textSize="@dimen/small_text_size"
        android:textColor="@color/colorBlack"/>

    <TextView
        android:id="@+id/StudentGrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/large_view_margin"
        android:layout_marginStart="@dimen/large_view_margin"
        android:layout_marginTop="@dimen/default_view_margin"
        android:textSize= "@dimen/small_text_size"
        android:textColor="@color/colorBlack"
        android:layout_toRightOf="@+id/StudentName"
        android:layout_toEndOf="@+id/StudentName"/>
</RelativeLayout>