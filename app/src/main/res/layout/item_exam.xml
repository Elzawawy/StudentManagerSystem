<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_text_view_margin"
    android:focusable="false"
    card_view:cardCornerRadius="@dimen/card_corner_radius"
    card_view:cardElevation="@dimen/card_view_elevation"
    card_view:cardPreventCornerOverlap="true"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants"
        android:padding="@dimen/default_view_padding">

        <TextView
            android:id="@+id/info_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_text_view_margin"
            android:text="@string/text_name"
            android:textSize="@dimen/card_text_size" />

        <TextView
            android:id="@+id/tv1_item_exam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_text_view_margin"
            android:textSize="@dimen/card_text_size"
            android:layout_toRightOf="@+id/info_tv1"
            android:layout_toEndOf="@+id/info_tv1"
            />
        <TextView
            android:id="@+id/info_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_text_view_margin"
            android:textSize="@dimen/card_text_size"
            android:text="@string/text_date"
            android:layout_below="@+id/info_tv1"/>
        <TextView
            android:id="@+id/tv2_item_exam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_text_view_margin"
            android:textSize="@dimen/card_text_size"
            android:layout_toRightOf="@+id/info_tv2"
            android:layout_toEndOf="@+id/info_tv2"
            android:layout_below="@+id/info_tv1"
            />
        <TextView
            android:id="@+id/info_tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_text_view_margin"
            android:textSize="@dimen/card_text_size"
            android:text="@string/text_class_name"
            android:layout_below="@+id/info_tv2"/>
        <TextView
            android:id="@+id/tv3_item_exam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_text_view_margin"
            android:textSize="@dimen/card_text_size"
            android:layout_toRightOf="@+id/info_tv3"
            android:layout_toEndOf="@+id/info_tv3"
            android:layout_below="@+id/info_tv2"
            />

    </RelativeLayout>


</android.support.v7.widget.CardView>
