<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="450dp"
    android:layout_height="wrap_content"
    android:padding="@dimen/default_parent_view_padding"
    android:layout_centerInParent="true"
    style="@style/Base.Theme.AppCompat.Dialog">

    <Button
        android:id="@+id/buttonCancel"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/large_view_margin"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="140dp"
        android:text="@string/text_cancel" />

    <Button
        android:id="@+id/buttonAddClass"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/large_view_margin"
        android:layout_marginRight="@dimen/large_view_margin"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="140dp"
        android:text="@string/text_add"
        android:layout_toRightOf="@+id/buttonCancel"
        android:layout_toEndOf="@+id/buttonCancel"
       />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="@dimen/small_image_view_width"
        android:layout_height="@dimen/small_image_view_height"
        android:layout_marginTop="11dp"
        app:srcCompat="@drawable/graduate" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/buttonCancel"
        android:layout_alignLeft="@+id/buttonCancel"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:textSize="@dimen/default_subtitle_text_size"
        android:textStyle="bold"
        android:text="@string/add_student_text"
        android:layout_toRightOf="@+id/imageView6"
        android:layout_toEndOf="@+id/imageView6"/>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="350dp"
        android:layout_height="34dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="76dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_toStartOf="@+id/buttonAddClass"
        android:layout_toLeftOf="@+id/buttonAddClass"/>

</RelativeLayout>