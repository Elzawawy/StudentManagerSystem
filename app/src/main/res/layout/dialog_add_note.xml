<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/default_parent_view_padding"
    style="@style/Base.Theme.AppCompat.Dialog"
    android:layout_centerInParent="true">


    <EditText
        android:id="@+id/textView3"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="60dp"
        android:hint="@string/student_profile_add_note_button" />

    <Button
        android:id="@+id/button3"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignTop="@+id/button4"
        android:layout_marginBottom="@dimen/dialog_note_margin_bottom"
        android:text="@string/text_cancel" />

    <Button
        android:id="@+id/button4"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView3"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="@dimen/dialog_note_margin_bottom"
        android:text="@string/text_add" />

    <ImageView
        android:id="@+id/imageButton2"
        android:layout_width="48dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        app:srcCompat="@drawable/edit" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="97dp"
        android:layout_marginLeft="97dp"
        android:layout_marginTop="13dp"
        android:text="@string/student_profile_add_note_button"
        android:textSize="@dimen/default_title_text_size"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"/>
</RelativeLayout>