<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/light_blue_background"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/default_image_view_width"
        android:layout_height="@dimen/default_image_view_height"
        android:layout_margin="@dimen/large_view_margin"
        android:background="@null"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/graduate" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageView"
        android:layout_marginBottom="@dimen/large_view_margin"
        android:layout_marginTop="@dimen/large_view_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout5"
                android:layout_marginTop="@dimen/large_view_margin"
                android:background="@android:color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView421"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/default_view_padding"
                        android:background="@color/colorGray"
                        android:text="@string/student_assignment_list_title"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:textAlignment="center" />

                </RelativeLayout>

                <ListView
                    android:id="@+id/listview3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/linearLayout3"
                android:layout_marginTop="@dimen/large_view_margin"
                android:background="@android:color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/default_view_padding"
                        android:background="@color/colorGray"
                        android:text="@string/student_exam_list_title"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:textAlignment="center" />


                </RelativeLayout>

                <ListView
                    android:id="@+id/listview4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_view_margin"
                android:background="@android:color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView42"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/default_view_padding"
                        android:background="@color/colorGray"
                        android:text="@string/student_class_list_title"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:textAlignment="center" />

                </RelativeLayout>

                <ListView
                    android:id="@+id/listview2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayout55"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout4"
                android:layout_marginTop="@dimen/large_view_margin"
                android:background="@android:color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView422"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/default_view_padding"
                        android:background="@color/colorGray"
                        android:text="@string/student_note_title"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:textAlignment="center" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_student_profile_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/default_view_padding"
                    android:textSize="@dimen/default_subtitle_text_size"
                    />
            </LinearLayout>


        </RelativeLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/default_view_margin"
        android:layout_marginLeft="@dimen/default_view_margin"
        android:layout_marginTop="@dimen/default_view_padding"
        android:layout_toEndOf="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:text="@string/text_name"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/default_title_text_size"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/icon_image_view_width"
        android:layout_height="@dimen/icon_image_view_height"
        android:layout_alignStart="@+id/imageView5"
        android:layout_alignLeft="@+id/imageView5"
        android:layout_below="@+id/imageView5"
        android:layout_marginTop="@dimen/small_view_margin"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/location" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="@dimen/icon_image_view_width"
        android:layout_height="@dimen/icon_image_view_height"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="@dimen/small_view_margin"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/mail" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="@dimen/icon_image_view_width"
        android:layout_height="@dimen/icon_image_view_height"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignStart="@+id/imageView3"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_below="@+id/imageView3"
        android:layout_marginTop="@dimen/small_view_margin"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/phone" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignStart="@+id/textView7"
        android:layout_alignLeft="@+id/textView7"
        android:text="@string/default_student_location"
        android:textSize="@dimen/small_text_size" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView6"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignTop="@+id/imageView5"
        android:text="@string/default_student_phone"
        android:textSize="@dimen/small_text_size" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView3"
        android:layout_marginStart="@dimen/default_view_margin"
        android:layout_marginLeft="@dimen/default_view_margin"
        android:layout_toEndOf="@+id/imageView3"
        android:layout_toRightOf="@+id/imageView3"
        android:text="@string/default_student_email"
        android:textSize="@dimen/small_text_size" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/button_RemoveStudent"
            android:layout_width="@dimen/student_profile_button_width"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="@dimen/large_view_margin"
            android:layout_marginLeft="@dimen/large_view_margin"
            android:text="@string/student_profile_remove_button" />

        <Button
            android:id="@+id/button_addNote"
            android:layout_width="@dimen/student_profile_button_width"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/large_view_margin"
            android:layout_marginRight="@dimen/large_view_margin"
            android:text="@string/student_profile_add_note_button" />


    </RelativeLayout>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="@dimen/small_image_view_width"
        android:layout_height="@dimen/small_image_view_height"
        android:padding="@dimen/default_view_padding"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imageView"
        android:layout_marginEnd="@dimen/large_view_margin"
        android:layout_marginRight="@dimen/large_view_margin"
        android:background="@null"
        android:scaleType="fitStart"
        android:cropToPadding="false"
        app:srcCompat="@drawable/drop2" />


</RelativeLayout>