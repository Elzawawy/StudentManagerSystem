<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/classCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_text_view_margin"
    android:focusable="false"
    card_view:cardCornerRadius="@dimen/card_corner_radius"
    card_view:cardElevation="@dimen/card_view_elevation"
    card_view:cardPreventCornerOverlap="true"
    card_view:cardUseCompatPadding="true">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="41dp"
            android:layout_height="56dp"
            android:layout_gravity="end | center_vertical"
            android:layout_marginEnd="@dimen/default_view_margin"
            android:layout_marginRight="@dimen/default_view_margin"
            android:onClick="classRemove"
            card_view:srcCompat="@drawable/remove" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_item_class_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/default_view_margin"
                    android:padding="@dimen/default_view_padding"
                    android:textSize="@dimen/default_title_text_size" />

                <TextView
                    android:id="@+id/tv_item_class_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/default_view_margin"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:padding="@dimen/default_view_padding"
                    android:textSize="@dimen/default_body_text_size" />

        </LinearLayout>

</android.support.v7.widget.CardView>